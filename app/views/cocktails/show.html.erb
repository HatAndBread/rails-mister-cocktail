<div class="info-container">
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %><%= dose.ingredient.name %></li>
    <% end %>
  </ul>
  <%= link_to  "Add a dose",  new_cocktail_dose_path(@cocktail), class: "link-btn"%>
  <%= link_to  "Delete this cocktailðŸ—‘", cocktail_path(@cocktail), class: "link-btn", method: :delete, data: { confirm: 'Are you sure you want to delete ' + @cocktail.name + '?' } %>
</div>
